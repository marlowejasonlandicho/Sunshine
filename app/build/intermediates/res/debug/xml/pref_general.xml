<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:key="@string/pref_location_key"
        android:singleLine="true"
        android:title="@string/pref_location_label" />

    <ListPreference
        android:defaultValue="@string/pref_temp_unit_default"
        android:dialogTitle="@string/pref_temp_unit_dialog_title"
        android:entries="@array/pref_temp_unit_entries"
        android:entryValues="@array/pref_temp_unit_values"
        android:key="@string/pref_temp_unit_key"
        android:title="@string/pref_temp_unit_label" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="pref_map_location_key"
        android:summary="@string/pref_map_location_summ"
        android:title="@string/pref_map_location_sync" />
</PreferenceScreen>
